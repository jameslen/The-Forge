#define THREADX 16
#define THREADY 16
#include "blur_resources.h.fsl"

RES(RWTex2D(float4),  ShadowMapTextures[2], UPDATE_FREQ_NONE, u1, binding = 2);


float4 Pass(int2 id, uint passType)
{
	float4 result = f4(0);
	int2 offsetDir = passType == PASS_TYPE_HORIZONTAL ? int2(1, 0) : int2(0, 1);
	uint textureIndex = uint(passType != PASS_TYPE_HORIZONTAL);

	float sum = 0.0f;
	for (int i = - int(BlurRootConstants.mFilterRadius); i <= int(BlurRootConstants.mFilterRadius); i++)
	{
		float weight = BlurWeights.mBlurWeights[abs(i)/4][abs(i)%4];
		result += LoadRWTex2D(ShadowMapTextures[textureIndex], id + offsetDir * i).rgba * weight;
		sum += weight;
	}
	return result / sum;
}

NUM_THREADS(THREADX, THREADY, 1)
void CS_MAIN( SV_DispatchThreadID(uint3) threadID) 
{
	INIT_MAIN;
	float4 result = Pass(int2(threadID.xy), BlurRootConstants.mBlurPassType);
	uint textureIndex = uint(BlurRootConstants.mBlurPassType == PASS_TYPE_HORIZONTAL);
	Write2D(ShadowMapTextures[textureIndex], threadID.xy, result);
	RETURN();
}